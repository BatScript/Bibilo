<%- include('header'); -%>
<h1 class="text-center">Sign Up</h1>
<div class="forms">
    <form action="/signup" method="POST">
        <table>
            <tr>
                <td><label for="email">Email: </label></td>
                <td><input name="username" type="email"></td>
            </tr>
            <tr>
                <td><label for="password">Password: </label></td>
                <td><input name="password" type="password" id="pass" value=""></td>
            </tr>
            <tr>
                <td><label for="password">Confirm Password: </label></td>
                <td><input name="cpassword" type="password" id="cpass" value=""></td>
            </tr>
            <tr>
                <td><label for="username">Username: </label></td>
                <td><input name="name" type="text" id="cpass" value=""></td>
            </tr>
            <tr>
                <td colspan="2"><button class="btn btn-primary" type="submit">Submit</button></td>
            </tr>
        </table>  
    </form> 
</div>
<p><%= message %></p>